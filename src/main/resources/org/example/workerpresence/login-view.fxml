<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.workerpresence.controller.LoginController" stylesheets="@styles.css"  styleClass="login-view">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" styleClass="login-container">
            <children>
                <Label text="Worker Login" styleClass="login-title" />
                <HBox spacing="10.0" alignment="CENTER">
                    <Label text="Worker ID:" />
                    <TextField fx:id="workerIdField" promptText="Enter Worker ID" />
                </HBox>
                <Button fx:id="loginButton" text="Login" onAction="#handleLogin" styleClass="primary-button" />
                <Label fx:id="loginStatusLabel" text="" styleClass="error-label" />
            </children>
        </VBox>
    </children>
</AnchorPane>

